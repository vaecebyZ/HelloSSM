<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<!--mybatis主要配置-->
<configuration>
    <!--    配置properties-->
    <!--在属性外部应用 使用 resources-->
    <properties resource="jdbcConfig.properties">

    </properties>
    <!--typeAliases 用来配置别名，type是全限定类名。Alias属性指代别名 之后就不区分大小写-->
    <typeAliases>

        <!--        <typeAlias type="io.github.vaecebyz.domain.User" alias="user"></typeAlias>-->
        <!--   用于指定配置别名的包，之后在该包下的所有类都会被注册且不区分大小写 -->
        <package name="io.github.vaecebyz.domain"/>

    </typeAliases>


    <!--配置环境-->
    <environments default="mysql">
        <!--        配置mysql环境-->
        <environment id="mysql">
            <!--            事务类型-->
            <transactionManager type="JDBC"></transactionManager>
            <!--            配置连接池-->
            <dataSource type="POOLED">
                <!--                配置连接数据库的信息 用${name引用}-->
                <property name="driver" value="${jdbc.driver}"/>
                <property name="url" value="${jdbc.url}"/>
                <property name="username" value="${jdbc.username}"/>
                <property name="password" value="${jdbc.password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <!--    如果使用注解应该使用class属性被注解的全限定类名(注意已经改名IUserDao.xml)-->
        <!--                <mapper class="io.github.vaecebyz.dao.IUserDao"></mapper>-->

        <!--    指定映射文件位置-->
        <!--        <mapper resource="io/github/vaecebyz/dao/IUserDao.xml"></mapper>-->
        <!--   也能用package 来指定dao接口所在的包 就不用写 resources 和class了 注意命名规范     -->
        <package name="io.github.vaecebyz.dao"/>
    </mappers>
</configuration>